{
  "extends": [
    "stylelint-stylistic/config",
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "./*.md",
    "./generic/_generic.normalize.scss",
    "./tools/*.scss",
    "./settings/*.scss",
    "./test/*.scss",
    "./test/*.css"
  ],
  "rules": {
    "stylistic/at-rule-name-newline-after": "always-multi-line",
    "stylistic/at-rule-name-space-after": "always-single-line",
    "stylistic/block-closing-brace-newline-after": [
      "always-multi-line",
      {
        "ignoreAtRules": ["if", "else"]
      }
    ],
    "stylistic/block-closing-brace-newline-before": [
      "always-multi-line",
      {
        "ignoreAtRules": ["if", "else"]
      }
    ],
    "stylistic/block-closing-brace-space-after": "always-single-line",
    "stylistic/block-closing-brace-space-before": "always-single-line",
    "stylistic/declaration-block-semicolon-newline-before": "never-multi-line",
    "stylistic/declaration-block-semicolon-space-after": "always-single-line",
    "stylistic/declaration-block-semicolon-space-before": "never",
    "stylistic/function-comma-newline-after": "never-multi-line",
    "stylistic/function-comma-newline-before": "never-multi-line",
    "stylistic/function-comma-space-after": "always-single-line",
    "stylistic/function-comma-space-before": "never-single-line",
    "stylistic/function-max-empty-lines": 5,
    "stylistic/max-empty-lines": 10,
    "stylistic/max-line-length": 180,
    "stylistic/media-query-list-comma-newline-after": "always-multi-line",
    "stylistic/media-query-list-comma-newline-before": "never-multi-line",
    "stylistic/selector-list-comma-newline-before": "never-multi-line",
    "stylistic/selector-list-comma-space-after": "always-single-line",
    "stylistic/selector-list-comma-space-before": "never",

    "stylistic/selector-max-empty-lines": 5,
    "stylistic/string-quotes": "single",
    "stylistic/value-list-comma-newline-after": "always-multi-line",
    "stylistic/value-list-comma-newline-before": "never-multi-line",

    "scss/at-import-no-partial-leading-underscore": null,
    "scss/comment-no-empty": null,
    "scss/dollar-variable-colon-space-after": "at-least-one-space",
    "scss/dollar-variable-colon-space-before": "never",
    "scss/partial-no-import": true,
    "scss/percent-placeholder-pattern": null,
    "scss/selector-no-redundant-nesting-selector": true,

    "block-no-empty": null,
    "color-named": "never",
    "declaration-empty-line-before": "never",
    "font-family-name-quotes": "always-where-required",
    "length-zero-no-unit": true,
    "max-nesting-depth": 4,
    "no-descending-specificity": null,
    "no-invalid-position-at-import-rule": null,
    "no-unknown-animations": true,
    "number-max-precision": 7,

    "rule-empty-line-before": "always",
    "selector-class-pattern": null,
    "selector-max-compound-selectors": 5,
    "selector-pseudo-element-colon-notation": "single",
    "selector-type-case": "lower",
    "shorthand-property-no-redundant-values": true,
  }
}
